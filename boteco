@bot.message_handler(commands=['start'])
def send_welcome(message):
    bot.reply_to(message, "–ü—Ä–∏–≤–µ—Ç!,–Ø —Ç–≤–æ–π Telegram –±–æ—Ç-–≠–∫–æ–ª–æ–≥üåç, –Ω–∞–ø–∏—à–∏ –∫–æ–º–∞–Ω–¥—É /help —á—Ç–æ –±—ã —É–∑–Ω–∞—Ç—å —á—Ç–æ —è —É–º–µ—é")


@bot.message_handler(commands=['help'])
def send_help(message):
    bot.reply_to(message, "/ecotips /ecofacts /ecochallenge /ecomems /ecoplastic /ecoglass /ecopaper ")


