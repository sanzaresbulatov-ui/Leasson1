@bot.message_handler(commands=['ecomems'])
def send_mem(message):
    img = random.choice(os.listdir("mems"))
    with open(f'mems/{img}', 'rb') as f:  
        bot.send_photo(message.chat.id, f)  



@bot.message_handler(commands=['ecoplastic'])
def send_plastic(message):
    bot.reply_to(message, "–ß—Ç–æ –Ω—É–∂–Ω–æ –≤—ã–±—Ä–∞—Å–æ–≤–∞—Ç—å –≤ ‚ôªÔ∏è–ü–ª–∞—Å—Ç–∏–∫: –±—É—Ç—ã–ª–∫–∏ ü•§, –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä—ã üçß, –ø–∞–∫–µ—Ç—ã üõçÔ∏è, –∫—Ä—ã—à–∫–∏, —É–ø–∞–∫–æ–≤–∫–∞ –æ—Ç —Ö–∏–º–∏–∏ üß¥")


